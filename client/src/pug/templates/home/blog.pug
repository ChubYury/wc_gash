+b.blog-wrap.SECTION
  +b.g-container--fit_sm-sm.--fit_md-md.--fit_lg-lg.--fit_xl-xl
    +b.blog
      +e.title.title-secondary.H2 Блог
      +e.name-btn.P Смотреть все 
        +b.btn-open.BUTTON
          +e.line.--top
          +e.line.--center
          +e.line.--bottom
      +b.slider-primary
        each element in blogData
          +e.wrap
            +b.slide
              +e.pic
                +e.pic-img.IMG(src=element.path alt="blog card")
              +e.title.H4= element.title
              +e.text.P= element.fullText 
              +e.date.P= element.date
      +b.slider-secondary
        each element in blogData
          +creteCard(element)

