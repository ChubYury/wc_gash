mixin createCrumbs(data = [])

  +b.breadcrumbs-wrap.SECTION
    +b.g-container--fit_sm-sm.--fit_md-md.--fit_lg-lg.--fit_xl-xl
      +b.breadcrumbs
        - let countCrumbs = 0;
        each element in data
          if countCrumbs < data.length -1
            +e.link.A(href=element.path)= element.name 
              +e.link.--slash.SPAN /
          else  
            +e.link.SPAN= element.name 
          - countCrumbs += 1;
      